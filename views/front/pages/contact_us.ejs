    <script>
    function myMap() {
    var mapOptions = {
        center: new google.maps.LatLng(26.2992360, 73.0426930),
        zoom: 15
    }
    
    
    
    
    
    var map = new google.maps.Map(document.getElementById("hasmap"), mapOptions);
    var marker = new google.maps.Marker({
          position: {lat: 26.2992360, lng: 73.0426930},
          map: map
        });
        
        
    google.maps.event.addListener(marker,'click',function() {
    var infowindow = new google.maps.InfoWindow({
      content:"Legal Resolution Centre Pvt. Ltd </br> Nyaya Sadan, Paota 'B' road </br> Jodhpur- 342006"
    });
    infowindow.open(map,marker);
    });    
        
    }
    </script>
