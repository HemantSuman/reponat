<%- include('../helper/Heading-Page.ejs', {title:'Edit'}); %>
<section class="content">
   <!-- general form elements -->
        <div class="box box-primary">
           <!-- .box-header --> 
             <div class="filterBar">
                <div class="filterBarRight">
                    <a href="/admin/<%= extraVar.viewDirectory %>/<%= extraVar.product_id %>" class="btn-view-list"><i class="fa fa-list" aria-hidden="true"></i> View Listing</a>
                </div>
            </div>
            <!-- form start -->

            <form role="form" id='formSubmit' name='' method='post' action='/admin/<%= extraVar.viewDirectory %>/update' enctype="multipart/form-data">
                <input type='hidden' name='id' value='<%= results.my_model.id %>'>
                <div class="box-body">
                     <div class="row col-md-ib">
                        <div class="col-md-4">

                            <div class="form-group">
                                <label for="exampleInputEmail1">Tax Name<em>*</em></label>
                                <input type="text" class="form-control" value="<%= results.my_model.tax_name %>" id="tax_name" placeholder="Enter Tax name" name='tax_name' >
                                <label class="error_mgs_lable" id="tax_name_error"></label>
                            </div>
                        </div>
                        <div class="col-md-4">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tax Value(%) <em>*</em></label>
                            <input type="text" class="form-control" value="<%= results.my_model.tax_value %>" id="tax_value" placeholder="Enter Tax Value (%)" name='tax_value' >
                            <label class="error_mgs_lable" id="tax_value_error"></label>
                        </div>
                        </div>
                        <div class="col-md-4">
                        <div class="form-group custom-select-outer">
                            <label for="exampleInputEmail1">Type<em>*</em></label>
                            <select class="form-control select2" name="tax_type" id="tax_type">
                                <option value="">Please Select</option>
                                <option value="1" <% if(results.my_model.tax_type == 1) { %> selected <% } %>>Tax</option>
                                <option value="2" <% if(results.my_model.tax_type == 2) { %> selected <% } %>>Cess</option>
                            </select>
                            <label class="error_mgs_lable" id="tax_type_error"></label>
                        </div>
                        </div>
                        <!-- <div class="form-group col-md-12">
                            <div class="checkbox">
                                <label>                           
                                    <input type="checkbox" name="is_bench_available"  id="is_bench_available" <%= (results.my_model.is_bench_available==0)? '':'checked' %> >Is Bench Available
                                </label>
                            </div>
                        </div> -->
                        <div class="col-md-4">
                        <div class="form-group">
                            <div class="chk-outer">
                                                       
                                    <input type="checkbox" name="is_active"  id="is_active" <%= (results.my_model.is_active==0)? '':'checked' %> >  <label for="is_active">   Status
                                </label>
                            </div>
                        </div>

                    </div>
                    </div>
               </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                         <div class="row">
                            <div class="col-md-12 text-right">
                          <%- include('../helper/commonHtml.ejs', {htmlType:'SaveCancel'}); %>
                          </div>
                         </div>
                    </div>
                </form>
            </div>
            <!-- /.box -->

</section>

<script>
    $('.startdate').datepicker({
        format: 'dd-mm-yyyy',
        startDate: '-d',
        todayHighlight: true,
        autoclose: true,
    });
    $('.enddate').datepicker({
        format: 'dd-mm-yyyy',
        startDate: '+1d',
        todayHighlight: true,
        autoclose: true,
    });
</script>