<%- include('../helper/Heading-Page.ejs', {title: (fromData.id) ? 'Edit' : 'Add' }); %>
<section class="content">
    <!-- general form elements -->
            <div class="box box-primary">
                <div class="filterBar">
                    <div class="filterBarRight">
                        <a href="/admin/<%= extraVar.viewDirectory %>/<%= extraVar.product_id %>" class="btn-view-list"><i class="fa fa-list" aria-hidden="true"></i> View Listing</a>
                    </div>
                </div>
               
                
                <!-- form start -->
                <form role="form" id='formSubmit' name='' method='post' action='/admin/franchise-commissions/create' enctype="multipart/form-data">
                    <input type="hidden" id="id" name='id' value='<%= fromData.id %>'>
                    <input type="hidden" id="id" name='product_id' value='<%= extraVar.product_id %>'>
                    <div class="box-body">
                        <div class="row">
                             <div class="col-md-12">
                                 <div class="form-group custom-select-outer">
                                    <label for="exampleInputEmail1">Franchise Level</label>
                                    <select class="form-control select2" name="franchise_commission_level_id" id="franchise_commission_level_id">
                                        <% data.FranchiseCommissions.forEach(function(rows){ %>
                                            <option value="<%= rows.id %>" <% if(fromData.franchise_commission_level_id==rows.id){ %>selected<% } %>><%= rows.franchise_name %></option>
                                        <% }); %>
                                    </select>
                                    <label class="error_mgs_lable" id="franchise_commission_level_id_error"></label>

                                 </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group radio-btn">
                                    <span class="fee-label">
                                        <input type="radio" name="feeType" value="0" <% if(fromData.commission_type==0 || !fromData.id){ %> checked <% } %> id="fee-label">
                                        <label for="fee-label">Rs</label>
                                    </span>
                                    <span>
                                        <input type="radio" name="feeType" value="1" <% if(fromData.commission_type==1){ %>checked<% } %> id="fee-label1">
                                        <label for="fee-label1"> %</label>
                                    </span>
                                    
                                </div>
                            </div>
                             <div class="col-md-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="amount" placeholder="Amount" name='commission_value' value='<%= fromData.commission_value %>'>
                                    <label class="error_mgs_lable" id="commission_value_error"></label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group chk-outer">
                                    <span class="fee-status">                           
                                        <input type="checkbox" name="is_active"  id="is_active" value="<%= (fromData.is_active==0)? 0:1 %>" <%= (fromData.is_active==0)? '':'checked' %> >
                                        <label for="is_active">Status</label> 
                                    </span>
                                </div>

                            </div>
                        </div>
                     </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <div class="row">
                            <div class="col-md-12 text-right"><button type="submit" class="btn btn-primary">Save</button>
                        <a href="/admin/<%= extraVar.viewDirectory %>/<%= extraVar.product_id %>" class="btn btn-primary">Cancel</a></div>
                        </div>
                        
                    </div>
                </form>
            </div>
            <!-- /.box -->


</section>
<script>
    $(".select2").select2();
</script>    