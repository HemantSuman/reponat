<%# include ../helper/breadcrumb.ejs %>
<%- include('../helper/Heading-Page.ejs', {title:'Listing'}); %>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title"><a href="/admin/<%= extraVar.viewDirectory %>/add/<%= extraVar.master_type %>" class="btn btn-primary">Add New</a> </h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">

                    <form id='searchData' name='searchData' enctype="multipart/form-data" method='post'>
                        <table class="table table-bordered">
                            <tr>
                                <th style="width: 10px">#Id</th>
                                <th><%= extraVar.titleName %></th>
                                <th>Status</th>
                                <th style="width: 100px">Actions</th>
                            </tr>


                            <% results.rows.forEach(function(rows){ %>
                            <tr>
                                <td><%= rows.id %></td>
                                <td><%= rows.master_name %></td>
                                <td>
                                    <% if(rows.is_active==1){ %>
                                    <span class="label label-success">Active</span>                               
                                    <% }else{ %>
                                    <span class="label label-danger">Inactive</span>
                                    <% } %>

                                </td>
                                <td>
                                    <a class="btn btn-success btn-xs" href="/admin/<%= extraVar.viewDirectory %>/edit/<%= extraVar.master_type %>/<%= rows.id %>" title="Edit" ><i class="fa fa-edit"></i></a>

                                    <a class="btn btn-danger btn-xs deleteEntry" statusUpdated="<%= (rows.is_active==1)? 0:1 %>" action="/admin/<%= extraVar.viewDirectory %>/delete/<%= extraVar.master_type %>/<%= rows.id %>" href="javascript:void(0);" ><i class="fa <%= (rows.is_active==1)? 'fa-lock':'fa-unlock' %>"></i></a>
                                </td>

                            </tr>
                            <% }); %>


                        </table>
                        <%# include('../element/helper.ejs', {type:'empty_table',data:data}); %>
                    </form>
                </div>
                <!-- /.box-body -->
                
                <div class="box-footer clearfix">

                    <%- include ../helper/pagination.ejs %>
                </div>
            </div>

        </div>

        <!-- /.col -->
    </div>
</section>