<%- include('../helper/Heading-Page.ejs', {title:'Edit'}); %>
<section class="content">
   <div class="box box-primary">
    <div class="filterBar">
            <div class="filterBarRight">
                <a href="/admin/<%= extraVar.viewDirectory %>/<%= extraVar.product_id %>"  class="btn-view-list"><i class="fa fa-list" aria-hidden="true"></i> View Listing</a>
            </div>
        </div>
        <!-- form start -->
        <form role="form" id='formSubmit' name='' method='post' action='/admin/<%= extraVar.viewDirectory %>/update' enctype="multipart/form-data">
            <input type='hidden' name='id' value='<%= results.my_model.id %>'>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-4">
                         <div class="form-group">
                            <label for="exampleInputEmail1">Country Name<em>*</em></label>
                            <input type="text" class="form-control" value="<%= results.my_model.country_name %>" id="country_name" placeholder="Enter Country name" name='country_name' >
                            <label class="error_mgs_lable" id="country_name_error"></label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Country Code<em>*</em></label>
                            <input type="text" class="form-control" value="<%= results.my_model.country_code %>" id="country_code" placeholder="Enter Country Code" name='country_code' >
                            <label class="error_mgs_lable" id="country_code_error"></label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group custom-select-outer">
                            <label for="exampleInputEmail1">Currency<em>*</em></label>
                            <select class="form-control select2" name="currency_id" id="currency_id">
                                <option value="">--Please Select--</option>
                                <% results.currencies.forEach(function(val, key) { %>
                                <option value="<%= val['id'] %>" <% if(results.my_model.currency_id == val['id']){ %> selected <% } %> ><%= val['currency_name']+' ('+val['currency_symbol']+')' %></option>
                                <% }); %>
                            </select>
                            <label class="error_mgs_lable" id="currency_id_error"></label>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="chk-outer">
                                                          
                                    <input type="checkbox" name="is_active"  id="is_active" <%= (results.my_model.is_active==0)? '':'checked' %> > <label for="is_active"> Status
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <div class="row">
                    <div class="col-md-12 text-right">
                       <%- include('../helper/commonHtml.ejs', {htmlType:'SaveCancel'}); %>
                    </div>
                </div>
            </div>       
        </form>
     </div>
 </section>

<script>
    $('.startdate').datepicker({
        format: 'dd-mm-yyyy',
        startDate: '-d',
        todayHighlight: true,
        autoclose: true,
    });
    $('.enddate').datepicker({
        format: 'dd-mm-yyyy',
        startDate: '+1d',
        todayHighlight: true,
        autoclose: true,
    });
</script>