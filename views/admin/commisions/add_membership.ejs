<% if(fromData.id){ %>
<%- include('../helper/Heading-Page.ejs', {title:'Edit'}); %>
<% } else { %>
<%-    include('../helper/Heading-Page.ejs', {title:'Add'}); %>
<% } %>
<section class="content">
    <!-- general form elements -->
        <div class="box box-primary">
            <div class="filterBar">
                <div class="filterBarRight">
                    <a href="/admin/<%= extraVar.viewDirectory %>/membership/<%= extraVar.product_id %>" class="btn-view-list"><i class="fa fa-list" aria-hidden="true"></i> View Listing</a>
                </div>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
                <form role="form" id='formSubmit' name='' method='post' action='/admin/commisions/add_membership' enctype="multipart/form-data">
                    <input type="hidden" id="id" name='id' value='<%= fromData.id %>'>
                    <input type="hidden" id="id" name='product_id' value='<%= extraVar.product_id %>'>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-6">
                               <div class="form-group custom-select-outer">
                                    <label for="exampleInputEmail1">Select Professional Type<em>*</em></label>
                                    <select class="form-control select2" name="role_type_id" id="role_type_id">
                                        <% data.professional.forEach(function(rows){ %>
                                        <option value="<%= rows.id %>" <% if(fromData.role_type_id==rows.id){ %>selected<% } %>><%= rows.role_type_name %></option>
                                        <% }); %>
                                    </select>
                                    <label class="error_mgs_lable" id="role_type_id_error"></label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Commision<em>*</em></label>
                                    <input type="text" class="form-control" id="commission_value" name='commission_value' value='<%= fromData.commission_value %>'>
                                    <label class="error_mgs_lable" id="commission_value_error"></label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group radio-btn">
                                    <input type="radio" name="commission_type" value="0"  <% if(fromData.commission_type==0 || !fromData.id){ %>checked<% } %> id="Fixed-val">
                                    <label for="Fixed-val">Fixed (Rs)</label>
                                    <input type="radio" name="commission_type" value="1" <% if(fromData.commission_type==1){ %>checked<% } %> id="base-val">
                                    <label for="base-val">% Base</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                 <div class="form-group">
                                    <div class="chk-outer">

                                            <input type="checkbox" name="is_active"  id="is_active" value='<%= (fromData.is_active==0)? 0:1 %>' <%= (fromData.is_active==0)? '':'checked' %> >
                                            <label for="is_active">Status</label>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <div class="row">
                            <div class="col-md-12 text-right">
                                 <button type="submit" class="btn btn-primary">Save</button>
                         <a href="/admin/<%= extraVar.viewDirectory %>/membership/<%= extraVar.product_id %>" class="btn btn-primary">Cancel</a>

                            </div>
                        </div>

                    </div>
                </form>
            </div>
            <!-- /.box -->


</section>
<script>
    $(".select2").select2();
</script>
