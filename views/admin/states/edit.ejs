<%- include('../helper/Heading-Page.ejs', {title:'Edit'}); %>
<section class="content">
    <div class="box box-primary">
        <!-- form start -->
        <div class="filterBar">
            <div class="filterBarRight">
                <a href="/admin/<%= extraVar.viewDirectory %>/<%= extraVar.product_id %>"  class="btn-view-list"><i class="fa fa-list" aria-hidden="true"></i> View Listing</a>
            </div>
        </div>
        <form role="form" id='formSubmit' name='' method='post' action='/admin/<%= extraVar.viewDirectory %>/update' enctype="multipart/form-data">
            <input type='hidden' name='id' value='<%= results.my_model.id %>'>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group custom-select-outer">
                            <label for="exampleInputEmail1">Countries<em>*</em></label>
                            <select class="form-control select2" name="country_id" id="currency_id">
                                <option value="">--Please Select--</option>
                                <% results.countries.forEach(function(val, key) { %>
                                <option value="<%= val['id'] %>" <% if(results.my_model.country_id == val['id']){ %> selected <% } %> ><%= val['country_name'] %></option>
                                <% }); %>
                            </select>
                            <label class="error_mgs_lable" id="country_id_error"></label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="exampleInputEmail1">State Name<em>*</em></label>
                            <input type="text" class="form-control" value="<%= results.my_model.state_name %>" id="state_name" placeholder="Enter State name" name='state_name' >
                            <label class="error_mgs_lable" id="state_name_error"></label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="exampleInputEmail1">State Code<em>*</em></label>
                            <input type="text" class="form-control" value="<%= results.my_model.state_code %>" id="state_code" placeholder="Enter State Code" name='state_code' >
                            <label class="error_mgs_lable" id="state_code_error"></label>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="exampleInputEmail1">State Slug<em>*</em></label>
                            <input type="text" class="form-control" value="<%= results.my_model.state_slug %>" id="state_slug" placeholder="Enter State Slug" name='state_slug' >
                            <label class="error_mgs_lable" id="state_slug_error"></label>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="chk-outer">
                                <label class="opacity-0lab"></label>                   
                                <input type="checkbox" name="is_business_available"  id="is_business_available" <%= (results.my_model.is_business_available==0)? '':'checked' %> >  <label for="is_business_available">   Is Business Available
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="chk-outer">
                                <input type="checkbox" name="is_active"  id="is_active" <%= (results.my_model.is_active==0)? '':'checked' %> > <label for="is_active">Status
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <div class="row">
                    <div class="col-md-12 text-right">
                        <%- include('../helper/commonHtml.ejs', {htmlType:'SaveCancel'}); %>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

<script>
    $('.startdate').datepicker({
        format: 'dd-mm-yyyy',
        startDate: '-d',
        todayHighlight: true,
        autoclose: true,
    });
    $('.enddate').datepicker({
        format: 'dd-mm-yyyy',
        startDate: '+1d',
        todayHighlight: true,
        autoclose: true,
    });
</script>